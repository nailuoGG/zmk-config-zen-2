#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/rgb.h>

/ {
    chosen {
        zmk,matrix_transform = &default_transform;

        // zmk,matrix_transform = &five_column_transform;
    };
};

/ {
    combos {
        compatible = "zmk,combos";

        combo_grave {
            bindings = <&kp GRAVE>;
            key-positions = <15 16>;
            layers = <0>;
        };

        combo_brace_left {
            bindings = <&kp LEFT_BRACKET>;
            key-positions = <19 20>;
            layers = <0>;
        };

        combo_brace_right {
            bindings = <&kp RIGHT_BRACKET>;
            key-positions = <20 21>;
            layers = <0>;
        };

        combo_left_bracket {
            bindings = <&kp LEFT_PARENTHESIS>;
            key-positions = <7 8>;
            layers = <0>;
        };

        combo_right_bracket {
            bindings = <&kp RIGHT_PARENTHESIS>;
            key-positions = <8 9>;
            layers = <0>;
        };

        como_lt {
            bindings = <&kp LT>;
            key-positions = <31 32>;
            layers = <0>;
        };

        combo_gt {
            bindings = <&kp GT>;
            key-positions = <32 33>;
            layers = <0>;
        };

        combo_equal {
            bindings = <&kp EQUAL>;
            key-positions = <30 31>;
            layers = <0>;
        };

        combo_plus {
            bindings = <&kp PLUS>;
            key-positions = <6 7>;
            layers = <0>;
        };

        combo_minus {
            bindings = <&kp MINUS>;
            key-positions = <18 19>;
            layers = <0>;
        };

        bootloader {
            bindings = <&bootloader>;
            key-positions = <25 6 3 34 30>;
            layers = <1>;
        };

        back_slash {
            bindings = <&kp BACKSLASH>;
            key-positions = <21 22>;
        };
    };

    behaviors {
        td0: td0 {
            compatible = "zmk,behavior-tap-dance";
            label = "TD0";
            #binding-cells = <0>;
            bindings = <&kp LEFT_SHIFT>, <&kp CAPSLOCK>;
        };

        mtt: mtt {
            compatible = "zmk,behavior-hold-tap";
            label = "MTT";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <500>;
            flavor = "tap-preferred";
        };

        ltt: ltt {
            compatible = "zmk,behavior-hold-tap";
            label = "LTT";
            bindings = <&mo>, <&kp>;

            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <200>;
        };

        HYPER_ESCAPE: HYPER_ESCAPE {
            compatible = "zmk,behavior-tap-dance";
            label = "HYPER_ESCAPE";
            #binding-cells = <0>;
            bindings = <&mt LS(LA(LC(LEFT_GUI))) ESCAPE>, <&kp LEFT_CONTROL>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        base {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
&mt LEFT_CONTROL TAB             &kp Q  &kp W  &kp E     &kp R  &kp T        &kp Y      &kp U  &kp I      &kp O    &kp P     &kp BACKSPACE
&mt LS(LA(LC(LEFT_GUI))) ESCAPE  &kp A  &kp S  &kp D     &kp F  &kp G        &kp H      &kp J  &kp K      &kp L    &kp SEMI  &mt LEFT_CONTROL SQT
&kp LEFT_SHIFT                   &kp Z  &kp X  &kp C     &kp V  &kp B        &kp N      &kp M  &kp COMMA  &kp DOT  &kp FSLH  &mt RIGHT_SHIFT LA(LG(SPACE))
                                               &kp LGUI  &mo 1  &kp SPACE    &kp ENTER  &mo 2  &kp RALT
            >;

            label = "QWERTY";
        };

        num {
            bindings = <
&kp GRAVE  &kp F1  &kp F2  &kp F3           &kp F4   &kp F5     &kp PLUS   &kp N7        &kp N8        &kp N9        &kp STAR    &trans
&trans     &kp F6  &kp F7  &kp F8           &kp F9   &kp F10    &kp MINUS  &kp NUMBER_4  &kp N5        &kp NUMBER_6  &kp SLASH   &trans
&trans     &trans  &trans  &trans           &kp F11  &kp F12    &kp EQUAL  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp PERIOD  &trans
                           &mt LEFT_GUI N0  &trans   &kp DEL    &trans     &none         &kp N0
            >;

            label = "NUMBER";
        };

        nav {
            bindings = <
&trans  &trans     &trans        &trans        &trans          &trans    &kp LS(LG(Z))  &kp LG(V)    &kp LG(C)      &kp LG(X)  &kp LG(Z)  &trans
&trans  &kp LCTRL  &kp LEFT_ALT  &kp LEFT_GUI  &kp LEFT_SHIFT  &trans    &kp LEFT       &kp DOWN     &kp UP         &kp RIGHT  &trans     &trans
&trans  &trans     &trans        &trans        &trans          &trans    &kp HOME       &kp PAGE_UP  &kp PAGE_DOWN  &kp END    &trans     &trans
                                 &trans        &to 3           &trans    &trans         &trans       &trans
            >;

            label = "NAVI";
        };

        FUNCION {
            bindings = <
&none      &kp F1  &kp F2  &kp F3  &kp F4  &kp F5    &kp F8   &kp F9  &kp F10  &kp F11  &kp F12  &none
&to 0      &none   &none   &none   &none   &kp F6    &kp F13  &none   &none    &none    &none    &none
&kp GLOBE  &none   &none   &none   &none   &kp F7    &kp F14  &none   &none    &none    &none    &none
                           &none   &none   &none     &none    &none   &none
            >;

            label = "Fn";
        };

        adjust {
            bindings = <
&sys_reset  &bootloader   &kp C_AL_SCREENSAVER  &kp C_BRIGHTNESS_DEC  &kp C_BRIGHTNESS_INC  &rgb_ug RGB_TOG    &rgb_ug RGB_BRI  &none   &none          &none  &none  &none
&to 0       &trans        &kp C_MUTE            &kp C_VOL_DN          &kp C_VOL_UP          &rgb_ug RGB_EFF    &rgb_ug RGB_BRD  &none   &none          &none  &none  &none
&trans      &bt BT_SEL 0  &bt BT_SEL 1          &bt BT_SEL 3          &bt BT_SEL 4          &none              &rgb_ug RGB_HUI  &none   &none          &none  &none  &trans
                                                &kp LEFT_GUI          &trans                &kp BACKSPACE      &kp SPACE        &trans  &kp RIGHT_ALT
            >;

            label = "ADJUST";
        };
    };
};
